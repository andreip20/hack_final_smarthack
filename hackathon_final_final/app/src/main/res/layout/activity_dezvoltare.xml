<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DezvoltareActivity">

    <TextView
        android:id="@+id/tv_dezvoltare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Statistici de dezvoltare tehnica"
        android:textColor="@color/design_default_color_primary"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart_dezvoltare"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dezvoltare"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_dezvoltare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:layout_margin="6dp"
        android:background="@drawable/edittext_round_colored"

        android:text="Cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>